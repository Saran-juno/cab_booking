<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmadurai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Mdsafetrack" >

    

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250px"
        android:layout_height="150px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mdsafetrack" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="450px"
        android:layout_height="180px"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/mdsafecar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:text="Safe track call taxi services is well-known established acts as a one-stop destination servicing customers both local and from other parts of madurai."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90px"
        android:layout_height="70px"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backb" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150px"
        android:layout_height="70px"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="44dp"
        android:background="@drawable/bbooknow" />

</RelativeLayout>
