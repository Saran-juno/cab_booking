<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmadurai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Mdbesttrack" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="180px"
        android:layout_height="70px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/mdbesttrack" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/bestcar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="19dp"
        android:textColor="#ffffff"
        android:text="Best track call taxi provide you a safe journey,on time services and round the clock services to our customers."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90px"
        android:layout_height="70px"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/backb" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170px"
        android:layout_height="80px"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/button1"
        android:layout_marginRight="22dp"
        android:background="@drawable/bbooknow" />

</RelativeLayout>
