<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcbe"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Cbegotaxi" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="190px"
        android:layout_height="70px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/cbgotaxi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="600px"
        android:layout_height="200px"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/gocar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:text="It has 24 hours cab services,Luxury A/C and GPS Tracking System services provider offered by GoTaxi from coimbatore."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ccff33"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90px"
        android:layout_height="70px"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:background="@drawable/backb" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170px"
        android:layout_height="80px"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginRight="37dp"
        android:background="@drawable/bbooknow" />

</RelativeLayout>
