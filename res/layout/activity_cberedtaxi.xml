<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcbe"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Cberedtaxi" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150px"
        android:layout_height="70px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/chredtaxi" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350px"
        android:layout_height="250px"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/redtaxiacar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Make a cozy comfortable ride with Redtaxi..Yes,RedTaxi gives you a complete business class ride."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ccff33"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90px"
        android:layout_height="70px"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp"
        android:background="@drawable/backb" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170px"
        android:layout_height="80px"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/imageView1"
       android:background="@drawable/bbooknow"/>

</RelativeLayout>
