<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmadurai"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Mdfasttrack" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="160px"
        android:layout_height="70px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chfsttrack" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350px"
        android:layout_height="250px"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/fastcar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="19dp"
        android:text="Book Fasttrack cabs for outstation in madurai to all over Tamilnadu."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90px"
        android:layout_height="70px"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="34dp"
       android:background="@drawable/backb" />

    <Button
        android:id="@+id/button2"
        android:layout_width="170px"
        android:layout_height="80px"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/button1"
        android:background="@drawable/bbooknow" />

</RelativeLayout>
